{
  "manifest_version": 2,
  "name": "Siplo Screen Share",
  "description": "Share Your Screen in Siplo Virtual Classroom",
  "version": "0.1.0",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "siplo-logo-16x16.png",
    "48": "siplo-logo-48x48.png",
    "128": "siplo-logo-128x128.png"
  },
  "background": {
        "scripts": [ "background.js" ],
        "persistent": true
  },
  "permissions": [
      "desktopCapture"
  ],
  "externally_connectable": {
      "matches": [
          "*://edu.siplo.xyz/*"
      ]
  }
}
